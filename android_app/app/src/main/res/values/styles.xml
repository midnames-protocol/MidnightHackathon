<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/green_accent</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/green_accent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColor">@color/green_accent</item>

        <!-- Custom styles for Material Components -->
        <item name="materialButtonStyle">@style/MidnamesButton</item>
        <item name="textInputStyle">@style/MidnamesTextInputLayout</item>
    </style>

    <!-- Button style -->
    <style name="MidnamesButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_accent_10</item>
        <item name="strokeColor">@color/green_accent_30</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/green_accent</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Text Input Layout style -->
    <style name="MidnamesTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green_accent_30</item>
        <item name="boxBackgroundColor">@color/glass_card_bg</item>
        <item name="hintTextColor">@color/green_accent</item>
        <item name="android:textColorHint">@color/green_accent_60</item>
    </style>

    <!-- Card style -->
    <style name="MidnamesCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/glass_card_bg</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/green_accent_30</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>